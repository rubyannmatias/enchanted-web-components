  "scripts": {
    "clean": "rm -rf node_modules && rm -rf ./dist",
    "build": "npm run compile-enchanted-css && tsc",
    "prepare-for-publish": "cp ./package.json ./dist/package.json && cp ./README.md ./dist/README.md && cp ./LICENSE.txt ./dist/LICENSE.txt && cp ./enchanted.css ./dist/enchanted.css && cp -r ./src/styles ./dist && cp -r ./src/eslint ./dist && rm -rf ./dist/_tests_ && rm -rf ./dist/stories",
    "lint": "eslint src",
    "lint-fix": "eslint src --fix",
    "test": "npm run test-unit",
    "test-unit": "wdio run ./wdio.unit.conf.ts",
    "test-snapshot": "wdio run ./wdio.snapshot.conf.ts",
    "compile-enchanted-css": "rm -f ./enchanted.css && sass --no-source-map ./src/styles/enchanted/enchanted.scss:enchanted.css",
    "watch-enchanted-css": "rm -f ./enchanted.css && sass --watch --no-source-map ./src/styles/enchanted/enchanted.scss:enchanted.css",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
